<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Financial Application Form</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <!-- Add FontAwesome for better icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gradient-to-b from-blue-50 to-blue-100 min-h-screen py-8">
  <div class="container mx-auto px-4 max-w-5xl">
    <div class="bg-white shadow-2xl rounded-3xl p-8 mb-8 border border-gray-100">
      <% if (contact.document_approved_status==='true' ) { %>
        <!-- APPROVED NOTICE -->
        <div class="p-6 rounded-lg bg-green-50 border-l-4 border-green-400 text-center">
          <div class="mb-4">
            <svg class="inline-block h-12 w-12 text-green-600" xmlns="http://www.w3.org/2000/svg" fill="none"
              viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h2 class="text-2xl font-semibold text-green-800 mb-2">
            Your documents have been approved!
          </h2>
          <p class="text-green-700">
            Thank you for submitting. No further action is required at this time. If you need to review or update
            anything, please contact us.
          </p>
        </div>

        <% } else { %>
          <!-- Header section -->
          <% if (contact.financial_application_form_submitted==='true' ) { %>
            <div class="mb-6 p-4 rounded-lg bg-yellow-50 border-l-4 border-yellow-400">
              <h2 class="text-lg font-semibold text-yellow-800">
                Youâ€™ve already submitted your application.
              </h2>
              <p class="mt-1 text-yellow-700">
                Any changes you make and resubmit will update your existing records.
              </p>
            </div>
            <% } %>
              <div class="mb-10 text-center">
                <div class="bg-[#56d487]/10 w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-3">
                  <svg class="h-12 w-12 text-[#56d487]" xmlns="http://www.w3.org/2000/svg" fill="none"
                    viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
                <h1 class="mt-4 text-3xl font-bold text-gray-800">
                  Welcome, <%= contact.firstName || 'there' %>!
                </h1>
                <h3 class="text-lg text-gray-600 mt-2 font-medium">
                  Your email:
                  <span class="text-[#56d487] font-semibold">
                    <%= contact.email %>
                  </span>
                </h3>
                <p class="mt-2 text-gray-600 max-w-xl mx-auto">
                  Please complete all sections below to submit your financial application
                </p>
              </div>

              <!-- Progress indicator -->
              <div class="mb-8">
                <div class="flex justify-between items-center mb-2">
                  <h4 class="font-medium text-gray-700 flex items-center">
                    <i class="fas fa-tasks text-[#56d487] mr-2"></i>Application Progress
                  </h4>
                  <span class="text-sm bg-[#56d487]/10 text-[#293142] py-1 px-3 rounded-full font-medium"
                    id="progress-text">0%
                    Complete</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-3">
                  <div class="bg-[#56d487] h-3 rounded-full transition-all duration-500 ease-out" id="progress-bar"
                    style="width: 0%"></div>
                </div>
              </div>

              <!-- Application Form -->
              <form id="applicationForm" enctype="multipart/form-data" class="space-y-8">

                <!-- Hidden fields -->
                <input type="hidden" name="contactId" value="<%= contact.id %>" />
                <input type="hidden" name="contactEmail" value="<%= contact.email %>" />
                <!-- Initial Questions for Conditional Sections -->
                <div class="p-6 border border-gray-200 rounded-xl bg-white">
                  <h3 class="text-xl font-semibold mb-6 text-gray-800 flex items-center">
                    <i class="fas fa-question-circle text-[#56d487] mr-2"></i>
                    Initial Assessment
                  </h3>

                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Do you owe money to the ATO(Australian Taxation Office)? <span class="text-red-500">*</span>
                      </label>
                      <select name="owesATO" id="owesATO" required
                        class="w-full border border-gray-300 rounded-lg p-3 bg-white focus:ring-2 focus:ring-[#56d487] focus:border-[#56d487]">
                        <option value="">Select an option</option>
                        <option value='yes'>Yes</option>
                        <option value='no'>No</option>
                      </select>
                    </div>

                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Child Support Status <span class="text-red-500">*</span>
                      </label>
                      <select name="childSupportStatus" id="childSupportStatus" required
                        class="w-full border border-gray-300 rounded-lg p-3 bg-white focus:ring-2 focus:ring-[#56d487] focus:border-[#56d487]">
                        <option value="">Select an option</option>
                        <option value="No child support">No child support</option>
                        <option value="I receive child support">I receive child support</option>
                        <option value="I pay child support">I pay child support</option>
                      </select>
                    </div>
                  </div>
                </div>

                <!-- 1. ATO Debt Disclosure (Conditional) -->
                <div id="atoDebtSection" class="p-6 border border-gray-200 rounded-xl bg-white hidden">
                  <h3 class="text-xl font-semibold mb-6 text-gray-800 flex items-center">
                    <i class="fas fa-file-invoice-dollar text-[#56d487] mr-2"></i>
                    ATO Debt Disclosure
                  </h3>

                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Tax File Number (TFN) <span class="text-red-500">*</span>
                      </label>
                      <input type="text" name="tfn" id="tfn" maxlength="9" pattern="[0-9]{8,9}"
                        class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-[#56d487] focus:border-[#56d487]"
                        placeholder="Enter 8-9 digit TFN">
                      <p class="text-xs text-gray-500 mt-1">8-9 digits only</p>
                    </div>

                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        ATO Debt Amount ($) <span class="text-red-500">*</span>
                      </label>
                      <input type="number" name="atoDebtAmount" id="atoDebtAmount" min="0" step="0.01"
                        class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-[#56d487] focus:border-[#56d487]"
                        placeholder="0.00">
                    </div>
                  </div>

                  <div class="mt-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                      ATO Notice (Optional)
                    </label>
                    <div class="flex items-center justify-center w-full">
                      <label
                        class="flex flex-col w-full h-32 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 hover:border-blue-400 transition-colors">
                        <div class="flex flex-col items-center justify-center pt-5 pb-4">
                          <i class="fas fa-cloud-upload-alt text-4xl text-gray-400 mb-2"></i>
                          <p class="text-sm text-gray-500">Click to upload or drag and drop</p>
                          <p class="text-xs text-gray-400 mt-1">PDF, JPG or PNG</p>
                        </div>
                        <input type="file" name="atoNotice" class="hidden" accept=".pdf,.jpg,.jpeg,.png" />
                      </label>
                    </div>
                  </div>
                </div>

                <!-- 2. Employment & Income Details -->
                <div class="p-6 border border-gray-200 rounded-xl bg-white">
                  <h3 class="text-xl font-semibold mb-6 text-gray-800 flex items-center">
                    <i class="fas fa-briefcase text-[#56d487] mr-2"></i>
                    Employment & Income Details
                  </h3>

                  <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                      Employment Status <span class="text-red-500">*</span>
                    </label>
                    <select name="employmentStatus" id="employmentStatus" required
                      class="w-full border border-gray-300 rounded-lg p-3 bg-white focus:ring-2 focus:ring-[#56d487] focus:border-[#56d487]">
                      <option value="">Select employment status</option>
                      <option value="Employed">Employed</option>
                      <option value="Self-employed">Self-employed</option>
                      <option value="Centrelink only">Centrelink only</option>
                      <option value="Unemployed">Unemployed</option>
                    </select>
                  </div>

                  <!-- Employed Section -->
                  <div id="employedSection" class="hidden space-y-6">
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Payslip Frequency <span class="text-red-500">*</span>
                      </label>
                      <select name="payslipFrequency" id="payslipFrequency"
                        class="w-full border border-gray-300 rounded-lg p-3 bg-white focus:ring-2 focus:ring-[#56d487] focus:border-[#56d487]">
                        <option value="">Select frequency</option>
                        <option value="Weekly">Weekly</option>
                        <option value="Fortnightly">Fortnightly</option>
                        <option value="Monthly">Monthly</option>
                      </select>
                    </div>

                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        4 Consecutive Payslips <span class="text-red-500">*</span>
                      </label>
                      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="flex items-center justify-center">
                          <label
                            class="flex flex-col w-full h-24 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 hover:border-blue-400 transition-colors">
                            <div class="flex flex-col items-center justify-center py-2">
                              <i class="fas fa-file-alt text-2xl text-gray-400 mb-1"></i>
                              <p class="text-xs text-gray-500">Payslip 1</p>
                            </div>
                            <input type="file" name="payslip1" class="hidden" accept=".pdf,.jpg,.jpeg" />
                          </label>
                        </div>
                        <div class="flex items-center justify-center">
                          <label
                            class="flex flex-col w-full h-24 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 hover:border-blue-400 transition-colors">
                            <div class="flex flex-col items-center justify-center py-2">
                              <i class="fas fa-file-alt text-2xl text-gray-400 mb-1"></i>
                              <p class="text-xs text-gray-500">Payslip 2</p>
                            </div>
                            <input type="file" name="payslip2" class="hidden" accept=".pdf,.jpg,.jpeg" />
                          </label>
                        </div>
                        <div class="flex items-center justify-center">
                          <label
                            class="flex flex-col w-full h-24 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 hover:border-blue-400 transition-colors">
                            <div class="flex flex-col items-center justify-center py-2">
                              <i class="fas fa-file-alt text-2xl text-gray-400 mb-1"></i>
                              <p class="text-xs text-gray-500">Payslip 3</p>
                            </div>
                            <input type="file" name="payslip3" class="hidden" accept=".pdf,.jpg,.jpeg" />
                          </label>
                        </div>
                        <div class="flex items-center justify-center">
                          <label
                            class="flex flex-col w-full h-24 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 hover:border-blue-400 transition-colors">
                            <div class="flex flex-col items-center justify-center py-2">
                              <i class="fas fa-file-alt text-2xl text-gray-400 mb-1"></i>
                              <p class="text-xs text-gray-500">Payslip 4</p>
                            </div>
                            <input type="file" name="payslip4" class="hidden" accept=".pdf,.jpg,.jpeg" />
                          </label>
                        </div>
                      </div>
                      <p class="text-xs text-gray-500 mt-2">PDF or JPG format, max 2MB each</p>
                    </div>
                  </div>

                  <!-- Centrelink Section -->
                  <div id="centrelinkSection" class="hidden">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                      Centrelink Income Statement <span class="text-red-500">*</span>
                    </label>
                    <div class="flex items-center justify-center w-full">
                      <label
                        class="flex flex-col w-full h-32 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 hover:border-blue-400 transition-colors">
                        <div class="flex flex-col items-center justify-center pt-5 pb-4">
                          <i class="fas fa-file-pdf text-4xl text-gray-400 mb-2"></i>
                          <p class="text-sm text-gray-500">Click to upload PDF</p>
                        </div>
                        <input type="file" name="centrelinkStatement" class="hidden" accept=".pdf" />
                      </label>
                    </div>
                  </div>

                  <!-- Self-employed Section -->
                  <div id="selfEmployedSection" class="hidden">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                      Profit & Loss Statement (Last 3 months) <span class="text-red-500">*</span>
                    </label>
                    <div class="flex items-center justify-center w-full">
                      <label
                        class="flex flex-col w-full h-32 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 hover:border-blue-400 transition-colors">
                        <div class="flex flex-col items-center justify-center pt-5 pb-4">
                          <i class="fas fa-chart-line text-4xl text-gray-400 mb-2"></i>
                          <p class="text-sm text-gray-500">Click to upload P&L Statement</p>
                          <p class="text-xs text-gray-400 mt-1">PDF, XLS or XLSX</p>
                        </div>
                        <input type="file" name="profitLossStatement" class="hidden" accept=".pdf,.xls,.xlsx" />
                      </label>
                    </div>
                  </div>
                </div>

                <!-- 3. Child Support (Conditional) -->
                <div id="childSupportSection" class="p-6 border border-gray-200 rounded-xl bg-white hidden">
                  <h3 class="text-xl font-semibold mb-6 text-gray-800 flex items-center">
                    <i class="fas fa-child text-[#56d487] mr-2"></i>
                    Child Support Documentation
                  </h3>

                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                      Child Support Assessment <span class="text-red-500">*</span>
                    </label>
                    <div class="flex items-center justify-center w-full">
                      <label
                        class="flex flex-col w-full h-32 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 hover:border-blue-400 transition-colors">
                        <div class="flex flex-col items-center justify-center pt-5 pb-4">
                          <i class="fas fa-file-contract text-4xl text-gray-400 mb-2"></i>
                          <p class="text-sm text-gray-500">Click to upload assessment</p>
                          <p class="text-xs text-gray-400 mt-1">PDF, JPG or PNG</p>
                        </div>
                        <input type="file" name="childSupportAssessment" class="hidden" accept=".pdf,.jpg,.jpeg,.png" />
                      </label>
                    </div>
                  </div>
                </div>

                <!-- 4. Financial Statements -->
                <div class="p-6 border border-gray-200 rounded-xl bg-white">
                  <h3 class="text-xl font-semibold mb-6 text-gray-800 flex items-center">
                    <i class="fas fa-university text-[#56d487] mr-2"></i>
                    Financial Statements
                  </h3>

                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Bank Statements (Last 3 months) <span class="text-red-500">*</span>
                      </label>
                      <div class="flex items-center justify-center w-full">
                        <label
                          class="flex flex-col w-full h-32 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 hover:border-blue-400 transition-colors">
                          <div class="flex flex-col items-center justify-center pt-5 pb-4">
                            <i class="fas fa-file-invoice text-4xl text-gray-400 mb-2"></i>
                            <p class="text-sm text-gray-500">Upload bank statements</p>
                            <p class="text-xs text-gray-400 mt-1">PDF preferred (single document)</p>
                          </div>
                          <input type="file" name="bankStatements" class="hidden" accept=".pdf" required />
                        </label>
                      </div>
                    </div>

                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Proof of Rent <span class="text-red-500">*</span>
                      </label>
                      <div class="flex items-center justify-center w-full">
                        <label
                          class="flex flex-col w-full h-32 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 hover:border-blue-400 transition-colors">
                          <div class="flex flex-col items-center justify-center pt-5 pb-4">
                            <i class="fas fa-home text-4xl text-gray-400 mb-2"></i>
                            <p class="text-sm text-gray-500">Upload proof of rent</p>
                            <p class="text-xs text-gray-400 mt-1">Receipt/Agreement/Board letter</p>
                          </div>
                          <input type="file" name="proofOfRent" class="hidden" accept=".pdf,.jpg,.jpeg,.png" required />
                        </label>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- 5. Identity Verification -->
                <div class="p-6 border border-gray-200 rounded-xl bg-white">
                  <h3 class="text-xl font-semibold mb-6 text-gray-800 flex items-center">
                    <i class="fas fa-id-card text-[#56d487] mr-2"></i>
                    Identity Verification
                  </h3>

                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Proof of Identity Type <span class="text-red-500">*</span>
                      </label>
                      <select name="identityType" id="identityType" required
                        class="w-full border border-gray-300 rounded-lg p-3 bg-white focus:ring-2 focus:ring-[#56d487] focus:border-[#56d487]">
                        <option value="">Select ID type</option>
                        <option value="Driver's Licence">Driver's Licence</option>
                        <option value="Passport">Passport</option>
                        <option value="Proof-of-Age Card">Proof-of-Age Card</option>
                      </select>
                    </div>

                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Upload Identity Document <span class="text-red-500">*</span>
                      </label>
                      <div class="flex items-center justify-center w-full">
                        <label
                          class="flex flex-col w-full h-32 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 hover:border-blue-400 transition-colors">
                          <div class="flex flex-col items-center justify-center pt-5 pb-4">
                            <i class="fas fa-id-badge text-4xl text-gray-400 mb-2"></i>
                            <p class="text-sm text-gray-500">Upload ID document</p>
                            <p class="text-xs text-gray-400 mt-1">PDF, JPG or PNG</p>
                          </div>
                          <input type="file" name="identityDocument" class="hidden" accept=".pdf,.jpg,.jpeg,.png"
                            required />
                        </label>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Consent & Submit -->
                <div class="pt-6">
                  <div class="flex items-start mb-6">
                    <div class="flex items-center h-5">
                      <input id="consent-checkbox" name="consent" type="checkbox" required
                        class="w-5 h-5 text-[#56d487] border-gray-300 rounded focus:ring-[#56d487]">
                    </div>
                    <div class="ml-3 text-sm">
                      <label for="consent-checkbox" class="font-medium text-gray-700">
                        I confirm that all provided information is accurate and complete.
                      </label>
                      <!-- <p class="text-gray-500 mt-1">I consent to the processing of my personal and financial information as per
                the
                <a href="#" class="text-[#56d487] hover:underline">privacy policy</a>.
              </p> -->
                    </div>
                  </div>

                  <button type="submit" id="submit-button" disabled
                    class="w-full flex justify-center items-center bg-[#56d487] hover:bg-[#293142] text-white font-bold py-4 px-6 rounded-xl transition duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-[#56d487] focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed shadow-lg cursor-pointer">
                    <span id="button-text">Submit Application</span>
                    <span id="loading-spinner" class="hidden ml-3">
                      <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none"
                        viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4">
                        </circle>
                        <path class="opacity-75" fill="currentColor"
                          d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                        </path>
                      </svg>
                    </span>
                  </button>
                </div>
              </form>
              <% } %>
    </div>

    <!-- Security notice -->
    <div class="bg-white p-5 rounded-xl shadow mb-8 border border-gray-200">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <i class="fas fa-lock text-green-600 text-xl"></i>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-gray-700">Secure Application Processing</h3>
          <p class="mt-1 text-sm text-gray-500">
            Your personal and financial information is encrypted during transit and securely stored in compliance with
            data protection regulations.
          </p>
        </div>
      </div>
    </div>

    <!-- Support contact -->
    <div class="text-center text-sm text-gray-600 mb-8">
      <p>Need assistance with your application?</p>
      <div class="mt-2 flex justify-center space-x-4">
        <a href="mailto:support@example.com" class="text-[#56d487] hover:underline flex items-center">
          <i class="fas fa-envelope mr-1"></i> support@example.com</a>
        <a href="tel:+18005551234" class="text-[#56d487] hover:underline flex items-center">
          <i class="fas fa-phone-alt mr-1"></i> 1-800-555-1234
        </a>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const form = document.getElementById('applicationForm');
      const submitButton = document.getElementById('submit-button');
      const consentCheckbox = document.getElementById('consent-checkbox');
      const progressBar = document.getElementById('progress-bar');
      const progressText = document.getElementById('progress-text');

      // Conditional section elements
      const owesATOSelect = document.getElementById('owesATO');
      const atoDebtSection = document.getElementById('atoDebtSection');
      const childSupportStatusSelect = document.getElementById('childSupportStatus');
      const childSupportSection = document.getElementById('childSupportSection');
      const employmentStatusSelect = document.getElementById('employmentStatus');
      const employedSection = document.getElementById('employedSection');
      const centrelinkSection = document.getElementById('centrelinkSection');
      const selfEmployedSection = document.getElementById('selfEmployedSection');

      // Show/hide ATO debt section
      owesATOSelect.addEventListener('change', function () {
        const tfnField = document.getElementById('tfn');
        const atoDebtAmountField = document.getElementById('atoDebtAmount');

        if (this.value === 'yes') {
          atoDebtSection.classList.remove('hidden');
          tfnField.required = true;
          atoDebtAmountField.required = true;
        } else {
          atoDebtSection.classList.add('hidden');
          tfnField.required = false;
          atoDebtAmountField.required = false;
          tfnField.value = '';
          atoDebtAmountField.value = '';
          clearValidationError(tfnField);
          clearValidationError(atoDebtAmountField);
        }
        updateProgress();
      });

      // Show/hide child support section
      childSupportStatusSelect.addEventListener('change', function () {
        const childSupportAssessmentField = document.querySelector('input[name="childSupportAssessment"]');
        if (this.value === 'I receive child support' || this.value === 'I pay child support') {
          childSupportSection.classList.remove('hidden');
          childSupportAssessmentField.required = true;
        } else {
          childSupportSection.classList.add('hidden');
          childSupportAssessmentField.required = false;
          childSupportAssessmentField.value = '';
          clearValidationError(childSupportAssessmentField);
        }
        updateProgress();
      });

      // Show/hide employment sections
      employmentStatusSelect.addEventListener('change', function () {
        const payslipFrequency = document.getElementById('payslipFrequency');
        const payslipInputs = document.querySelectorAll('input[name*="payslip"]');
        const centrelinkStatement = document.querySelector('input[name="centrelinkStatement"]');
        const profitLossStatement = document.querySelector('input[name="profitLossStatement"]');

        // Hide all sections first
        employedSection.classList.add('hidden');
        centrelinkSection.classList.add('hidden');
        selfEmployedSection.classList.add('hidden');

        // Reset required attributes
        payslipFrequency.required = false;
        payslipInputs.forEach(input => input.required = false);
        centrelinkStatement.required = false;
        profitLossStatement.required = false;

        // Clear values and validation errors
        payslipFrequency.value = '';
        payslipInputs.forEach(input => {
          input.value = '';
          clearValidationError(input);
        });
        centrelinkStatement.value = '';
        profitLossStatement.value = '';
        clearValidationError(payslipFrequency);
        clearValidationError(centrelinkStatement);
        clearValidationError(profitLossStatement);

        // Show relevant section and set requirements
        if (this.value === 'Employed') {
          employedSection.classList.remove('hidden');
          payslipFrequency.required = true;
        } else if (this.value === 'Centrelink only') {
          centrelinkSection.classList.remove('hidden');
          centrelinkStatement.required = true;
        } else if (this.value === 'Self-employed') {
          selfEmployedSection.classList.remove('hidden');
          profitLossStatement.required = true;
        }
        updateProgress();
      });

      // Payslip frequency handler with dynamic requirements
      document.getElementById('payslipFrequency').addEventListener('change', function () {
        const payslipInputs = document.querySelectorAll('input[name*="payslip"]');

        // Reset all payslips
        payslipInputs.forEach((input, index) => {
          input.required = false;
          input.value = '';
          clearValidationError(input);
          const container = input.closest('.flex');
          if (container) {
            container.style.display = 'flex';
          }
        });

        if (this.value === 'Weekly') {
          // Weekly: Show all 4 payslips, all required
          payslipInputs.forEach(input => input.required = true);
        } else if (this.value === 'Fortnightly' || this.value === 'Monthly') {
          // Fortnightly/Monthly: Show only first 2 payslips, only those required
          payslipInputs.forEach((input, index) => {
            if (index < 2) {
              input.required = true;
            } else {
              input.required = false;
              const container = input.closest('.flex');
              if (container) {
                container.style.display = 'none';
              }
            }
          });
        }
        updateProgress();
      });


      // TFN validation
      document.getElementById('tfn').addEventListener('input', function () {
        this.value = this.value.replace(/[^0-9]/g, '');
        if (this.value.length > 9) {
          this.value = this.value.slice(0, 9);
        }
      });

      // Show notification function
      function showNotification(message, type = 'info') {
        // Remove any existing notification
        const existingNotification = document.querySelector('.notification');
        if (existingNotification) {
          existingNotification.remove();
        }

        // Create notification element
        const notification = document.createElement('div');
        notification.className = `notification fixed top-4 right-4 p-4 rounded-lg shadow-lg max-w-md z-50 animate-fade-in`;

        // Set styles based on notification type
        if (type === 'error') {
          notification.classList.add('bg-red-100', 'text-red-700', 'border-l-4', 'border-red-500');
          notification.innerHTML = `<div class="flex items-center"><i class="fas fa-exclamation-circle mr-2 text-red-500"></i>${message}</div>`;
        } else if (type === 'success') {
          notification.classList.add('bg-green-100', 'text-green-700', 'border-l-4', 'border-green-500');
          notification.innerHTML = `<div class="flex items-center"><i class="fas fa-check-circle mr-2 text-green-500"></i>${message}</div>`;
        } else {
          notification.classList.add('bg-blue-100', 'text-blue-700', 'border-l-4', 'border-blue-500');
          notification.innerHTML = `<div class="flex items-center"><i class="fas fa-info-circle mr-2 text-blue-500"></i>${message}</div>`;
        }

        // Add notification to DOM
        document.body.appendChild(notification);

        // Remove notification after 5 seconds
        setTimeout(() => {
          notification.classList.add('opacity-0');
          setTimeout(() => {
            notification.remove();
          }, 300);
        }, 5000);
      }

      // Custom validation message functions
      function showValidationError(input, message) {
        clearValidationError(input);

        const errorDiv = document.createElement('div');
        errorDiv.className = 'validation-error mt-1 text-sm text-red-600 flex items-center';
        errorDiv.innerHTML = `<i class="fas fa-exclamation-circle mr-1"></i>${message}`;

        // Add red border to input or label for file inputs
        if (input.type === 'file') {
          const label = input.closest('label');
          label.classList.add('border-red-500');
          label.classList.remove('border-gray-300', 'hover:border-blue-400');

          // Insert error message after the label container
          const labelContainer = label.parentNode;
          labelContainer.appendChild(errorDiv);
        } else {
          input.classList.add('border-red-500', 'focus:border-red-500', 'focus:ring-red-500');
          input.classList.remove('border-gray-300', 'focus:border-[#56d487]', 'focus:ring-[#56d487]');
          input.parentNode.appendChild(errorDiv);
        }

        // Scroll to first error if this is the first one
        if (document.querySelectorAll('.validation-error').length === 1) {
          input.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
      }



      function clearValidationError(input) {
        let existingError;

        if (input.type === 'file') {
          const label = input.closest('label');
          const labelContainer = label.parentNode;
          existingError = labelContainer.querySelector('.validation-error');

          // Remove red border from label
          label.classList.remove('border-red-500');
          label.classList.add('border-gray-300', 'hover:border-blue-400');
        } else {
          existingError = input.parentNode.querySelector('.validation-error');

          // Remove red border from input
          input.classList.remove('border-red-500', 'focus:border-red-500', 'focus:ring-red-500');
          input.classList.add('border-gray-300', 'focus:border-[#56d487]', 'focus:ring-[#56d487]');
        }

        if (existingError) {
          existingError.remove();
        }
      }


      // File upload feedback
      const fileInputs = document.querySelectorAll('input[type="file"]');
      fileInputs.forEach(input => {
        input.addEventListener('invalid', function (e) {
          e.preventDefault(); // suppress native bubble
          let message;
          switch (input.name) {
            case 'payslip1':
            case 'payslip2':
            case 'payslip3':
            case 'payslip4':
              message = `Please upload ${input.name.replace('payslip', 'Payslip ')}`;
              break;
            case 'centrelinkStatement':
              message = 'Please upload your Centrelink income statement';
              break;
            case 'profitLossStatement':
              message = 'Please upload your Profit & Loss statement';
              break;
            case 'childSupportAssessment':
              message = 'Please upload your child support assessment';
              break;
            case 'atoNotice':
              message = 'Please upload your ATO notice';
              break;
            case 'bankStatements':
              message = 'Please upload your bank statements (last 3 months)';
              break;
            case 'proofOfRent':
              message = 'Please upload proof of rent';
              break;
            case 'identityDocument':
              message = 'Please upload your identity document';
              break;
            default:
              message = 'Please select a file to upload';
          }
          showValidationError(input, message);
        });

        input.addEventListener('change', function () {
          const label = this.closest('label');
          const textElement = label.querySelector('p');

          if (this.files.length > 0) {
            const fileName = this.files[0].name;
            textElement.textContent = `âœ“ ${fileName}`;
            textElement.classList.add('text-green-600', 'font-medium');
            label.classList.add('border-green-400', 'bg-green-50');
            label.classList.remove('border-gray-300', 'border-red-500'); // Remove red border when file selected
            clearValidationError(this);
          } else {
            // Reset to original state
            const originalText = this.name.includes('payslip') ? `Payslip ${this.name.slice(-1)}` :
              this.name === 'atoNotice' ? 'Click to upload or drag and drop' :
                this.name === 'centrelinkStatement' ? 'Click to upload PDF' :
                  this.name === 'profitLossStatement' ? 'Click to upload P&L Statement' :
                    this.name === 'childSupportAssessment' ? 'Click to upload assessment' :
                      this.name === 'bankStatements' ? 'Upload bank statements' :
                        this.name === 'proofOfRent' ? 'Upload proof of rent' :
                          'Upload ID document';

            textElement.textContent = originalText;
            textElement.classList.remove('text-green-600', 'font-medium');
            label.classList.remove('border-green-400', 'bg-green-50', 'border-red-500');
            label.classList.add('border-gray-300');
          }
          updateProgress();
        });
      });


      // Progress calculation
      function updateProgress() {
        const allInputs = form.querySelectorAll('input, select');
        const visibleRequiredInputs = Array.from(allInputs).filter(input => {
          const isRequired = input.required;
          const isVisible = !input.closest('.hidden');
          return isRequired && isVisible;
        });

        const completedInputs = visibleRequiredInputs.filter(input => {
          if (input.type === 'checkbox') {
            return input.checked;
          } else if (input.type === 'file') {
            return input.files.length > 0;
          } else {
            return input.value.trim() !== '';
          }
        });

        const progressPercentage = visibleRequiredInputs.length > 0
          ? Math.round((completedInputs.length / visibleRequiredInputs.length) * 100)
          : 0;

        progressBar.style.width = progressPercentage + '%';
        progressText.textContent = progressPercentage + '% Complete';

        // Enable submit button when form is complete and consent is checked
        const isFormComplete = progressPercentage === 100;
        const isConsentChecked = consentCheckbox.checked;
        submitButton.disabled = !(isFormComplete && isConsentChecked);
      }

      // Enhanced validation for all inputs
      const inputs = form.querySelectorAll('input[required], select[required]');
      inputs.forEach(input => {
        // Remove default browser validation bubble
        input.addEventListener('invalid', function (e) {
          e.preventDefault();
          this.setCustomValidity('');

          // Create custom validation message
          let message = '';
          if (!this.validity.valid) {
            if (this.type === 'email') {
              message = 'Please enter a valid email address (e.g., name@example.com)';
            } else if (this.type === 'tel') {
              message = 'Please enter a valid Australian phone number';
            } else if (this.name === 'tfn') {
              if (this.validity.patternMismatch) {
                message = 'Tax File Number must be 8-9 digits only';
              } else {
                message = 'Please enter your Tax File Number (8-9 digits)';
              }
            } else if (this.type === 'file') {
              message = 'Please select a file to upload';
            } else if (this.type === 'number') {
              if (this.name === 'atoDebtAmount') {
                message = 'Please enter the ATO debt amount';
              } else {
                message = 'Please enter a valid number';
              }
            } else if (this.tagName === 'SELECT') {
              if (this.name === 'owesATO') {
                message = 'Please select whether you owe money to the ATO';
              } else if (this.name === 'childSupportStatus') {
                message = 'Please select your child support status';
              } else if (this.name === 'employmentStatus') {
                message = 'Please select your employment status';
              } else if (this.name === 'payslipFrequency') {
                message = 'Please select how often you receive payslips';
              } else if (this.name === 'identityType') {
                message = 'Please select your identity document type';
              } else {
                message = 'Please make a selection';
              }
            } else if (this.value === '') {
              // Get field label for better message
              const label = document.querySelector(`label[for="${this.id}"]`) ||
                this.closest('.mb-6, .mb-4, .space-y-6')?.querySelector('label');
              const fieldName = label ? label.textContent.replace('*', '').trim() : 'This field';
              message = `${fieldName} is required`;
            }
          }

          // Show custom validation message
          showValidationError(this, message);
        });

        // Clear validation on input
        input.addEventListener('input', function () {
          this.setCustomValidity('');
          clearValidationError(this);
        });

        input.addEventListener('change', function () {
          this.setCustomValidity('');
          clearValidationError(this);
        });
      });

      // Update progress on any input change
      form.addEventListener('input', updateProgress);
      form.addEventListener('change', updateProgress);
      consentCheckbox.addEventListener('change', updateProgress);

      // Form submission with enhanced validation
      form.addEventListener('submit', async function (e) {
        e.preventDefault();

        // Let browser fire 'invalid' on any still-empty required
        if (!form.checkValidity()) {
          form.reportValidity();
          const errorCount = document.querySelectorAll('.validation-error').length;
          showNotification(
            `Please fix ${errorCount} error${errorCount > 1 ? 's' : ''} below before submitting`,
            'error'
          );
          return;
        }

        // At this point all required fields (including files) are valid
        // Show loading state
        const buttonText = document.getElementById('button-text');
        const loadingSpinner = document.getElementById('loading-spinner');
        buttonText.textContent = 'Processing...';
        loadingSpinner.classList.remove('hidden');
        submitButton.disabled = true;

        // Prepare and send
        const formData = new FormData(form);
        try {
          const response = await fetch('/upload-documents', {
            method: 'POST',
            body: formData
          });
          if (!response.ok) throw new Error(`Server responded with ${response.status}`);
          await response.json();
          form.reset();
          showSuccessMessage();
        } catch (error) {
          console.error('Upload error:', error);
          showNotification(error.message || 'Error submitting application. Please try again.', 'error');
        } finally {
          loadingSpinner.classList.add('hidden');
          buttonText.textContent = 'Submit Application';
          submitButton.disabled = false;
        }
      });

      function showSuccessMessage() {
        const formContainer = document.querySelector('.bg-white.shadow-2xl');
        formContainer.innerHTML = `
          <div class="text-center py-16 px-4 animate-fade-in">
            <div class="bg-green-100 w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-6 shadow-md">
              <i class="fas fa-check text-4xl text-green-600"></i>
            </div>
            <h2 class="text-3xl font-bold text-gray-800 mb-4">Application Submitted Successfully!</h2>
            <p class="text-gray-600 mb-6 max-w-md mx-auto">
              Thank you for submitting your financial application. We've received all your documents and will review your application within 2-3 business days.
            </p>
            <button
              onclick="location.reload()"
              class="mt-4 bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded-md shadow-md transition duration-300 cursor-pointer"
            >
             Resubmit Application
            </button>
          </div>
             `;
      }

      // Drag and drop functionality for file inputs
      fileInputs.forEach(input => {
        const label = input.closest('label');

        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
          label.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
          e.preventDefault();
          e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
          label.addEventListener(eventName, highlight, false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
          label.addEventListener(eventName, unhighlight, false);
        });

        function highlight() {
          label.classList.add('border-blue-400', 'bg-[#56d487]/10');
        }

        function unhighlight() {
          label.classList.remove('border-blue-400', 'bg-[#56d487]/10');
        }

        label.addEventListener('drop', handleDrop, false);

        function handleDrop(e) {
          const dt = e.dataTransfer;
          const files = dt.files;
          input.files = files;

          // Trigger change event
          const event = new Event('change', { bubbles: true });
          input.dispatchEvent(event);
        }
      });

      // Initial progress update
      updateProgress();

      // Auto-save functionality (using in-memory storage only)
      let formState = {};

      function saveFormState() {
        const formData = new FormData(form);
        formState = {};
        for (let [key, value] of formData.entries()) {
          if (!(value instanceof File)) {
            formState[key] = value;
          }
        }
      }

      function restoreFormState() {
        for (let [key, value] of Object.entries(formState)) {
          const input = form.querySelector(`[name="${key}"]`);
          if (input && input.type !== 'file') {
            input.value = value;
            if (input.type === 'checkbox') {
              input.checked = value === 'on';
            }
          }
        }
        // Trigger change events to update conditional sections
        owesATOSelect.dispatchEvent(new Event('change'));
        childSupportStatusSelect.dispatchEvent(new Event('change'));
        employmentStatusSelect.dispatchEvent(new Event('change'));
        updateProgress();
      }

      // Save form state every 30 seconds
      setInterval(saveFormState, 30000);

      // Save on page unload
      window.addEventListener('beforeunload', saveFormState);

      // Restore form state on page load (if any)
      if (Object.keys(formState).length > 0) {
        restoreFormState();
      }
    });
  </script>
